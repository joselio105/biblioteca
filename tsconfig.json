{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@configs/*": ["./src/configs/*"],
      "@components/*": ["./src/modules/components/*"],
      "@contexts/*": ["./src/modules/contexts/*"],
      "@constants/*": ["./src/modules/constants/*"],
      "@hooks/*": ["./src/modules/hooks/*"],
      "@infra/*": ["./src/modules/infra/*"],
      "@layouts/*": ["./src/modules/layouts/*"],
      "@types/*": ["./src/modules/types/*"],
      "@utils/*": ["./src/modules/utils/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
